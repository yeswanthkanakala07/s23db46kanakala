extends layout

block content
  h1= title

  -
    let items=results

  .container-fluid
    .row
      -
      for result, index in results
        .col-sm-2(onclick=`buy(${index})`)
          p #{result.name}
          p #{result.color}
          p Quantity: #{result.quantity}

  script.
    function buy(index) {
      alert(`You purchased item ${index+1}`);
    }
