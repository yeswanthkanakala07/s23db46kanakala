extends layout 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let fruitid = toShow._id 
    - let name = toShow.name 
    - let color = toShow.color
    - let quantity = toShow.quantity
    - let actionid = "/resource/fruits/" + fruitid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='fruitsAttr mr-3') fruit ID is: 
        div #{fruitid} 
      div.row 
        div(class='fruitsAttr mr-3') fruit name is: 
        div #{name} 
      div.row 
        div(class='fruitsAttr mr-3') fruit color is: 
        div #{color}  
      div.row 
        div(class='fruitsAttr mr-3') fruit quantity is: 
        div #{quantity}  
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the fruit collection 
      window.location.href='/fruits' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Dont need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/fruits' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 